<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<extensions>
    <add assembly="NLog.Web.AspNetCore" />
    <add assembly="NLog.Targets.Loki" />
</extensions>
    
    
<targets>
    <target name="logfile" xsi:type="File" fileName="listing_service.log" />
    <target name="logconsole" xsi:type="Console" />
    <target xsi:type="WebService" name="lokiHttp"
            url="http://loki:3100/loki/api/v1/push"
            protocol="JsonPost">
        <parameter name="streams" layout='[
        {
          "stream": {
            "app": "listingservice",
            "host": "${hostname:lowercase=true}"
          },
          "values": [
            [ "${date:format=yyyy-MM-ddTHH\\:mm\\:ss.ffffffZ}", "${message:raw=true}" ]
          ]
        }
      ]'/>
    </target>
</targets>
    
    <rules>
        <logger name="*" minlevel="Debug" writeTo="logfile" />
        <logger name="*" minlevel="Info" writeTo="logconsole" />
        <logger name="*" minlevel="Info" writeTo="loki" />
        <logger name="*" minlevel="Error" writeTo="loki" />
        <logger name="*" minlevel="Debug" writeTo="loki" />
        <logger name="*" minlevel="Warn" writeTo="loki" />
        <logger name="*" minlevel="Info" writeTo="lokiHttp" />
        <logger name="*" minlevel="Error" writeTo="lokiHttp" />
        <logger name="*" minlevel="Debug" writeTo="lokiHttp" />
        <logger name="*" minlevel="Warn" writeTo="lokiHttp" />
    </rules>
    
    
</nlog>